    xmlns:viewModels="using:ElgatoWaveSDK.Emulator.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:ChannelViewModel}">

    <Border Background="{StaticResource PanelColour}" Margin="10" Width="175" CornerRadius="5">

        <RelativePanel  Margin="5 5 5 5">
            <RelativePanel Name="TopChannelPanel" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True">

                <Border Name="ChannelIcon" Background="Blue" CornerRadius="2" Width="25" Height="25" />
                <Border Name="ChannelHeader" Margin="5 0 0 0" Background="Green" Height="25" RelativePanel.RightOf="ChannelIcon" RelativePanel.AlignRightWithPanel="True" />

                <Border Name="TopBar" Background="Yellow" Margin="0 5 0 0" Height="15" RelativePanel.Below="ChannelIcon" RelativePanel.AlignLeftWith="ChannelIcon" RelativePanel.AlignRightWith="ChannelHeader"></Border>
                <Border Name="BottomBar" Background="Red" Margin="0 2 0 0" Height="15" RelativePanel.Below="TopBar" RelativePanel.AlignLeftWith="ChannelIcon" RelativePanel.AlignRightWith="ChannelHeader"></Border>

                <Border Name="LinkedCheckbox" Height="10" Width="10" Margin="0 5 0 0 " Background="Purple" RelativePanel.Below="BottomBar" RelativePanel.AlignHorizontalCenterWith="BottomBar"></Border>
            </RelativePanel>

            <Grid RelativePanel.Below="TopChannelPanel" Margin="0 5 0 0" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="55"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Name="LeftSlider" Background="Pink" RelativePanel.AlignTopWithPanel="True" Width="25" ></Border>
                <Border Margin="0 5 0 0" Grid.Column="0" Grid.Row="1" Name="HeadphonesButtom" Background="Silver" Width="50" HorizontalAlignment="Center" ></Border>

                <Border Grid.Column="1" Grid.Row="0" Name="RightSlider" Background="Orange" RelativePanel.AlignTopWithPanel="True" Width="25" ></Border>
                <Border Margin="0 5 0 0" Grid.Column="1" Grid.Row="1" Name="TowerButton" Background="Gold" Width="50" HorizontalAlignment="Center" ></Border>
            </Grid>

