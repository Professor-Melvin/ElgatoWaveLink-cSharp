                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Border Background="#292929" Margin="10" Width="150" CornerRadius="5">
                        <StackPanel Margin="10" Orientation="Vertical" >

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="Blue" CornerRadius="2" Width="20" Height="20"></Border>
                                <ComboBox Grid.Column="1" Height="20" HorizontalAlignment="Stretch" Margin="5 0 0 0">
                                    <ComboBoxItem IsSelected="true">Elgato Wave:3</ComboBoxItem>
                                </ComboBox>
                            </Grid>

                            <ProgressBar Margin="0 5 0 0" Height="10" Value="27" Minimum="0" Maximum="100" Background="Black" Foreground="Green">
                                <ProgressBar.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="2" />
                                </ProgressBar.RenderTransform>
                            </ProgressBar>
                            <ProgressBar Margin="0 2 0 0" Height="10" Value="50" Minimum="0" Maximum="100" Background="Black" Foreground="Green">
                                <ProgressBar.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="2" />
                                </ProgressBar.RenderTransform>
                            </ProgressBar>

                            <TextBlock Margin="0 10 0 0" HorizontalAlignment="Center">(  )</TextBlock>

                            <StackPanel Orientation="Horizontal">
                                <Slider AutomationProperties.Name="vertical slider" Width="100" Orientation="Vertical"
                                        TickFrequency="10" TickPlacement="Outside" Maximum="50" Minimum="-50"/>
                                <Slider AutomationProperties.Name="vertical slider" Width="100" Orientation="Vertical"
                                        TickFrequency="10" TickPlacement="Outside" Maximum="50" Minimum="-50"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"></Grid>
        </Grid>
    </Grid>
</Window>
