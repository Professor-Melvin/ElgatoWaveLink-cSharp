                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Inputs"/>

                    <Button Name="WindowsAudioButton" Grid.Column="1" Style="{StaticResource settingButtons}">
                        A
                    </Button>
                    <Button Name="SettingsButton" Grid.Column="2" Style="{StaticResource settingButtons}">
                        G
